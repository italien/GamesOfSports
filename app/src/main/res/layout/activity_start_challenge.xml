<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gamesofsports.StartChallenge">

    <ImageView
        android:id="@+id/logoChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logogos256"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textStartChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:layout_below="@+id/logoChallenge"
        android:text="@string/start_challenge"
        />

    <TextView
        android:id="@+id/chrono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textStartChallenge"
        android:layout_marginTop="5dp"
        android:textSize="50sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/textPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chrono"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="@string/points"
        />

    <TextView
        android:id="@+id/textCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textPoint"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="50sp"
        android:textColor="#000000"
        android:text="@string/counter"
        />

    <Button
        android:id="@+id/startPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/stop"
        android:text="@string/startPause"
        />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/stop"
        />

    <Button
        android:id="@+id/addPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startPause"
        android:layout_toLeftOf="@+id/startPause"
        android:layout_toStartOf="@+id/startPause"
        android:textSize="25sp"
        android:layout_marginBottom="25dp"
        android:text="@string/addPoints"
        />

    <Button
        android:id="@+id/removePoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/startPause"
        android:layout_toEndOf="@+id/startPause"
        android:layout_alignTop="@+id/addPoints"
        android:textSize="25sp"
        android:text="@string/removePoints"
     />

</RelativeLayout>
