<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gamesofsports.DescriptionChallenge">

    <TextView
        android:id="@+id/nameChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challenge Description :"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/descriptionChallenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameChallenge"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque vitae tempus neque. Morbi at augue a risus porta euismod. Maecenas lobortis nec ex a pellentesque. Cras pretium quam ipsum, id imperdiet ante faucibus blandit. Aenean maximus ullamcorper massa rutrum eleifend. Donec risus arcu, efficitur id ullamcorper sed, interdum sed tellus. Maecenas placerat nunc et velit tempus egestas."
        />

    <Button
        android:id="@+id/accept"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acceptChallenge"
        />

    <Button
        android:id="@+id/share"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shareChallenge"
        />


</RelativeLayout>
